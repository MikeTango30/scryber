{% extends 'base.html.twig' %}

{% block title %}File status page{% endblock %}

{% block main %}
    <div class="">Check uploaded file status</div>
    <form method="post" action="/refresh_status/{{ userfileId }}">
        Check sent file `{{ job_id }}` scrybe status <input type="hidden" name="userfileId" value="{{ userfileId }}">. Current status is `<strong>{{ job_status }}</strong>` <button type="submit" name="refresh_status">Refresh</button>
    </form>
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
    </div>
{% endblock %}

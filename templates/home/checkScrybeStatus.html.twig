{% extends 'base.html.twig' %}

{% block title %}Failo statutas{% endblock %}

{% block content %}
  <div class="page-wrapper blue-gradient-page">
    <div class="page-content container">
      <div class="content-wrapper text-center">
        <h1 class="text-white">Vyksta failo transkribavimas</h1>
        <p class="text-white">Kai transkribavimas bus įvykdytas, nukreipsime jus į Scriber teksto redaktorių ir
          informuosime el. paštu, tai gali trukti net keletą ar net kelioliką minučių, priklausomai nuo įrašo ilgio.</p>
        <div class="loading-ring">
          <form method="post" action="/refresh_status/{{ userfileId }}">
            <div class="content-wrapper">
              <strong>Failas:</strong> {{ fileName }}
            </div>
            <div class="content-wrapper">
              <strong>Būklė:</strong>
                {{ job_status }}
            </div>
              <div class="content-wrapper loading">
                <div class="lds-dual-ring"></div>
              </div>
            <input type="hidden" name="userfileId" value="{{ userfileId }}">
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block javascripts %}
{{ encore_entry_script_tags('checkTranscribingStatus') }}
{% endblock %}


{% block main %}
    <h1>Mano Transkripcijos</h1>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Data</th>
            <th scope="col">Failas</th>
            <th scope="col">Trukmė</th>
            <th scope="col">Paskutinį kartą redaguota</th>
            <th scope="col">Veiksmai</th>
        </tr>
        </thead>
        <tbody>
        {% for scrybe in transcriptions %}
            <tr>
                <th scope="row">{{ scrybe.no }}</th>
                <td>{{ scrybe.date }}</td>
                <td>{{ scrybe.title }}</td>
                <td>{{ scrybe.length }}</td>
                <td>{{ scrybe.updated }}</td>
                <td>
                    {% if scrybe.isScrybed %}
                        <a href="{{ path('edit_scribed_text', {'userfileId': scrybe.id} ) }}">Redaguoti</a>
                    {% else %}
                        <a href="{{ path('send_with_api', {'userfileId': scrybe.id} ) }}">Transkribuoti</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
